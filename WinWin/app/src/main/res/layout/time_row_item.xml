<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="60dp">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/timeThumbnail"
        android:background="@drawable/btn_rectangle"
        android:src="@drawable/ic_time_eat"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/timeThumbnail"
        android:text="Meals"
        android:maxLines="2"
        android:maxWidth="200dp"
        android:id="@+id/tvTimeTitle"
        android:layout_centerVertical="true"
        android:textSize="18sp"
        android:textColor="@color/dimgray"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/btnModifier"
        android:text="1h"
        android:id="@+id/tvTimeSpend"
        android:layout_centerVertical="true"
        android:textSize="20sp"
        android:textColor="@color/dimgray"
        />
    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btnModifier"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_time_item_modifier"
        android:background="@color/colorWhite"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />
</RelativeLayout>